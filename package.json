{
  "name": "@madronejs/core",
  "version": "1.0.16",
  "description": "Object composition and reactivity framework.",
  "private": false,
  "license": "MIT",
  "type": "module",
  "main": "./dist/core.umd.js",
  "module": "./dist/core.mjs",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/core.mjs",
      "require": "./dist/core.umd.js",
      "types": "./types"
    }
  },
  "files": [
    "dist/*.js",
    "dist/*.mjs",
    "types/**/*.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/madronejs/madrone.git"
  },
  "bugs": {
    "url": "https://github.com/madronejs/madrone/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "lint": "eslint src/",
    "test": "vitest",
    "test-ci": "CI=true NODE_ENV=test vitest run --coverage",
    "docs": "typedoc --entryPoints src/index.ts",
    "cleanup": "rm -rf ./dist/* && rm -rf ./types/*",
    "cov": "CI=true NODE_ENV=test vitest run --coverage && open coverage/lcov-report/index.html",
    "build": "vite build",
    "build-types": "tsc -p ./tsconfig.types.json && tsc-alias -p tsconfig.types.json",
    "build-all": "pnpm cleanup && pnpm build && pnpm build-types"
  },
  "keywords": [
    "reactivity",
    "composition",
    "state management",
    "madrone",
    "vue"
  ],
  "devDependencies": {
    "@eslint/compat": "~1.2.9",
    "@eslint/eslintrc": "~3.3.1",
    "@eslint/js": "~9.26.0",
    "@stylistic/eslint-plugin": "~4.2.0",
    "@types/lodash": "~4.17.16",
    "@vitest/coverage-v8": "~2.1.9",
    "eslint": "~9.26.0",
    "eslint-plugin-import": "~2.31.0",
    "eslint-plugin-unicorn": "~59.0.1",
    "globals": "~16.1.0",
    "happy-dom": "~17.4.7",
    "lodash": "~4.17.21",
    "tsc-alias": "~1.8.16",
    "typedoc": "~0.28.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "8.32.1",
    "vite": "~5.4.19",
    "vitest": "~2.1.9",
    "vue3": "npm:vue@~3.5.13"
  },
  "engines": {
    "node": "~20.11 || ~22.14",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.11.0"
}
