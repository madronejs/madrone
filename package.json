{
  "name": "madronejs",
  "version": "1.0.11",
  "description": "Object composition and reactivity framework.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "types/index.d.ts",
  "license": "MIT",
  "files": [
    "dist/*.js",
    "types/**/*.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/madronejs/madrone.git"
  },
  "bugs": {
    "url": "https://github.com/madronejs/madrone/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test": "jest --watch",
    "test-ci": "CI=true NODE_ENV=test jest --coverage",
    "docs": "typedoc --entryPoints src/index.ts",
    "cleanup": "rm -rf ./dist && rm -rf ./types",
    "cov": "CI=true NODE_ENV=test jest --coverage && open coverage/lcov-report/index.html",
    "build": "node ./esbuild.config.js",
    "build-types": "tsc -p ./tsconfig.types.json && tsc-alias -p tsconfig.types.json",
    "build-all": "pnpm cleanup && pnpm build && pnpm build-types"
  },
  "keywords": [
    "reactivity",
    "composition",
    "state management",
    "madrone",
    "vue"
  ],
  "dependencies": {
    "lodash": "4.17.21"
  },
  "devDependencies": {
    "@types/jest": "^29.5.4",
    "@types/lodash": "^4.14.197",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "esbuild": "^0.19.2",
    "eslint": "^8.48.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "jest": "^29.6.4",
    "jest-environment-jsdom": "^29.6.4",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.7",
    "typedoc": "^0.25.0",
    "typescript": "^4.9.5",
    "vue2": "npm:vue@^2.7.14",
    "vue3": "npm:vue@^3.3.4"
  },
  "engines": {
    "node": "^18.8",
    "pnpm": "^8.7.0"
  },
  "packageManager": "pnpm@8.7.0"
}
