{
  "name": "madronejs",
  "version": "1.0.5",
  "description": "Object composition and reactivity framework.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "types/index.d.ts",
  "license": "MIT",
  "files": [
    "dist/*.js",
    "types/**/*.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/madronejs/madrone.git"
  },
  "bugs": {
    "url": "https://github.com/madronejs/madrone/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test": "jest --watch",
    "docs": "typedoc --entryPoints src/index.ts",
    "cleanup": "rm -rf ./dist && rm -rf ./types",
    "cov": "CI=true NODE_ENV=test jest --coverage && open coverage/lcov-report/index.html",
    "build": "node ./esbuild.config.js",
    "build-types": "tsc -p ./tsconfig.types.json && tsc-alias -p tsconfig.types.json",
    "build-all": "yarn cleanup && yarn build && yarn build-types"
  },
  "keywords": [
    "reactivity",
    "composition",
    "state management",
    "madrone",
    "vue"
  ],
  "devDependencies": {
    "@types/jest": "^27.5.0",
    "@types/lodash": "^4.14.182",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "esbuild": "^0.15.0",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "jest": "^27.0.6",
    "prettier": "^2.6.0",
    "ts-jest": "^27.0.5",
    "tsc-alias": "^1.6.7",
    "typedoc": "^0.23.10",
    "typescript": "4.7.x",
    "vue2": "npm:vue@^2.7.1",
    "vue3": "npm:vue@^3.2.0"
  },
  "dependencies": {
    "lodash": "4.17.x"
  }
}
