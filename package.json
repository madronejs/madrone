{
  "name": "@madronejs/core",
  "version": "1.0.16",
  "description": "Object composition and reactivity framework.",
  "private": false,
  "license": "MIT",
  "type": "module",
  "main": "./dist/core.umd.js",
  "module": "./dist/core.mjs",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/core.mjs",
      "require": "./dist/core.umd.js",
      "types": "./types"
    }
  },
  "files": [
    "dist/*.js",
    "dist/*.mjs",
    "types/**/*.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/madronejs/madrone.git"
  },
  "bugs": {
    "url": "https://github.com/madronejs/madrone/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "lint": "eslint src/",
    "test": "vitest",
    "test-ci": "CI=true NODE_ENV=test vitest run --coverage",
    "docs": "typedoc --entryPoints src/index.ts",
    "cleanup": "rm -rf ./dist/* && rm -rf ./types/*",
    "cov": "CI=true NODE_ENV=test vitest run --coverage && open coverage/lcov-report/index.html",
    "build": "vite build",
    "build-types": "tsc -p ./tsconfig.types.json && tsc-alias -p tsconfig.types.json",
    "build-all": "pnpm cleanup && pnpm build && pnpm build-types"
  },
  "keywords": [
    "reactivity",
    "composition",
    "state management",
    "madrone",
    "vue"
  ],
  "devDependencies": {
    "@eslint/compat": "~1.2.1",
    "@eslint/eslintrc": "~3.1.0",
    "@eslint/js": "~9.13.0",
    "@stylistic/eslint-plugin": "~2.9.0",
    "@types/lodash": "~4.17.12",
    "@vitest/coverage-v8": "~2.1.3",
    "eslint": "~9.13.0",
    "eslint-config-airbnb-base": "~15.0.0",
    "eslint-plugin-import": "~2.31.0",
    "eslint-plugin-unicorn": "~56.0.0",
    "globals": "~15.11.0",
    "happy-dom": "~15.7.4",
    "lodash": "~4.17.21",
    "tsc-alias": "~1.8.10",
    "typedoc": "~0.26.10",
    "typescript": "~5.6.3",
    "typescript-eslint": "8.11.0",
    "vite": "~5.4.9",
    "vitest": "~2.1.3",
    "vue3": "npm:vue@~3.4.38"
  },
  "engines": {
    "node": "^20.11",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.11.0"
}
