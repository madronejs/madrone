{
  "name": "@madronejs/core",
  "version": "1.0.16",
  "description": "Object composition and reactivity framework.",
  "main": "./dist/madronejs.umd.js",
  "module": "./dist/madronejs.mjs",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/madronejs.mjs",
      "require": "./dist/madronejs.umd.js",
      "types": "./types"
    }
  },
  "license": "MIT",
  "files": [
    "dist/*.js",
    "dist/*.mjs",
    "types/**/*.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/madronejs/madrone.git"
  },
  "bugs": {
    "url": "https://github.com/madronejs/madrone/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test": "vitest",
    "test-ci": "CI=true NODE_ENV=test vitest run --coverage",
    "docs": "typedoc --entryPoints src/index.ts",
    "cleanup": "rm -rf ./dist && rm -rf ./types",
    "cov": "CI=true NODE_ENV=test vitest run --coverage && open coverage/lcov-report/index.html",
    "build": "vite build",
    "build-types": "tsc -p ./tsconfig.types.json && tsc-alias -p tsconfig.types.json",
    "build-all": "pnpm cleanup && pnpm build && pnpm build-types"
  },
  "keywords": [
    "reactivity",
    "composition",
    "state management",
    "madrone",
    "vue"
  ],
  "devDependencies": {
    "@types/lodash": "^4.14.197",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.50.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-unicorn": "^48.0.1",
    "happy-dom": "^12.6.0",
    "lodash": "4.17.21",
    "tsc-alias": "^1.8.7",
    "typedoc": "^0.25.0",
    "typescript": "^4.9.5",
    "vite": "^4.4.10",
    "vitest": "^0.34.6",
    "vue2": "npm:vue@^2.7.14",
    "vue3": "npm:vue@^3.3.4"
  },
  "engines": {
    "node": "^18.8",
    "pnpm": "^8.7.0"
  },
  "packageManager": "pnpm@8.7.0"
}
